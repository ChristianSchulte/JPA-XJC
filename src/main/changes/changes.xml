<document xmlns="http://maven.apache.org/changes/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/changes/1.0.0 http://maven.apache.org/xsd/changes-1.0.0.xsd">
  <properties>
    <title>Changelog</title>
    <author email="schulte2005@users.sourceforge.net">Christian Schulte</author>
  </properties>
  <body>
    <!-- *********************************************************************************************************** -->
    <release version="1.0-beta-1" date="2009-04-24"/>
    <!-- *********************************************************************************************************** -->
    <release version="1.0-beta-2" date="2009-05-03">
      <action dev="schulte2005" type="update">Updated to BSD-style licensing.</action>
    </release>
    <!-- *********************************************************************************************************** -->
    <release version="1.0-beta-3" date="2009-05-07">
      <action dev="schulte2005" type="update"><![CDATA[
      Updated to correctly remove package names from fully qualified class names when building entity names.]]>
      </action>
    </release>
    <!-- *********************************************************************************************************** -->
    <release version="1.0-beta-4" date="2009-06-02">
      <action dev="schulte2005" type="update"><![CDATA[
      Updated to apply schema derived defaults to &lt;orm:column&gt; elements of &lt;orm:id&gt;, &lt;orm:basic&gt; and
      &lt;orm:version&gt; customizations.]]>
      </action>
      <action dev="schulte2005" type="fix"><![CDATA[
      Added support for &lt;orm:id&gt; customizations. Versions prior to this version do not support &lt;orm:id&gt;
      customizations.]]>
      </action>
    </release>
    <!-- *********************************************************************************************************** -->
    <release version="1.0-beta-5" date="2009-12-22">
      <action dev="schulte2005" type="update">Updated to use validating marshallers for writing XML files.</action>
    </release>
    <!-- *********************************************************************************************************** -->
    <release version="1.0-beta-6" date="2010-02-20">
      <action dev="schulte2005" type="update">Added Javadoc to generated methods.</action>
      <action dev="schulte2005" type="update">Added final modifier to generated method parameters.</action>
      <action dev="schulte2005" type="update">Added &lt;code&gt;-persistenceSystemId&lt;/code&gt; option.</action>
      <action dev="schulte2005" type="update">Added &lt;code&gt;-ormSystemId&lt;/code&gt; option.</action>
    </release>
    <!-- *********************************************************************************************************** -->
    <release version="1.0-beta-7" date="2010-02-25">
      <action dev="schulte2005" type="update">Moved to Sourceforge project with unix name 'jpaxjc' matching the maven
      group id and prepared for synching to the central Maven repository.
      </action>
    </release>
  </body>
</document>
